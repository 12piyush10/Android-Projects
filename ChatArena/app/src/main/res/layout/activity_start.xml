<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.piyush_pooja.chatarena.StartActivity">

    <TextView
        android:text="Welcome To Chat Arena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"
        android:textSize="24sp"
        android:textColor="@android:color/white" />

    <Button
        android:text="@string/already_have_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_login_btn"
        android:layout_marginBottom="19dp"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@android:color/white"
        android:layout_above="@+id/start_reg_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/need_a_new_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_reg_button"
        android:layout_marginBottom="60dp"
        android:textColor="@color/colorPrimary"
        android:backgroundTint="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
